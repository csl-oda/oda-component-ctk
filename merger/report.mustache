<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <style>
        :root {
        --column-fixed-width: 150px; 
        }

        body {
            background-color: #f5f5f5;
        }
        table {
            width: 100%;
            font-size: 13px;
        }

        /* Table Fixed Column */

        table th,
        table td {
        padding-right: 24px;
        padding-left: 24px;
        white-space: nowrap;
        }
    </style>
</head>
<body>
    <div class="container">
    <div class="section">
        <h1 class="center-align">ODA Conformance Test Report</h1>
        <div class="divider"></div>
    </div>

    {{#summary}}
    <div class="row">
        <div class="col s4 card">
            <div class="card-content row">
                <span class="card-title">Component</span>
                <div class="col s6">
                    <div class="row">
                        <p>Version:</p>
                    </div>
                    <div class="row">
                        <p>Name:</p>
                    </div>
                    <div class="row">
                        <p>Conformance level:</p> <!-- not implemented -->
                    </div>
                    <div class="row">
                        <p>CTK passed:</p> <!-- not implemented -->
                    </div>
                </div>
                <div class="col s6">
                    <div class="row">
                        <p>{{component_version}}</p>
                    </div>
                     <div class="row">
                        <p>{{component_name}}</p>
                    </div>
                    <div class="row">
                        <p>{{conformance_level}}</p> <!-- not implemented -->
                    </div>
                    <div class="row">
                        <p>{{ctk_passed}} False</p> <!-- not implemented -->
                    </div>
                </div>
            </div>
        </div>
       <div class="col s4 card">
            <div class="card-content row">
                <span class="card-title">Kubernetes Versions</span>
                <div class="col s6">
                    <div class="row">
                        <p>Core apis:</p>
                    </div>
                    <div class="row">
                        <p>platform:</p> 
                    </div>
                    <div class="row">
                        <p>Canvas:</p>
                    </div>
                </div>
                <div class="col s6">
                    <div class="row">
                        <p>{{platform_kube_version}}</p>
                    </div>
                    <div class="row">
                        <p>{{canvas_platform}}</p>
                    </div>
                    <div class="row">
                        <p>{{canvas_version}}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s4 card">
            <div class="card-content row">
                <span class="card-title">Environment</span>
                <div class="col s6">
                    <div class="row">
                        <p>Mocha version:</p>
                    </div>
                    <div class="row">
                        <p>Postman version:</p>
                    </div>
                    <div class="row">
                        <p>Node version:</p> <!-- not implemented -->
                    </div>
                    <div class="row">
                        <p>Platform arch:</p> <!-- not implemented -->
                    </div>
                </div>
                <div class="col s6">
                    <div class="row">
                        <p>{{mocha_version}}</p>
                    </div>
                    <div class="row">
                        <p>{{postman_version}}</p>
                    </div>
                    <div class="row">
                        <p>{{node_version}}</p>
                    </div>
                    <div class="row">
                        <p>{{platform_arch}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
    <div class="card z-depth-2">
        <table class="striped" style="padding-left: 1rem">
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Passed</th>
                <th>failed</th>
                <th>total</th>
                <th>skipped</th>
                <th>errors</th>
            </tr>
            {{#summary_table}}
            <tr>
                <td>{{name}}</td>
                <td>{{type}}</td>
                <td>{{passed}}</td>
                <td>{{failed}}</td>
                <td>{{total}}</td>
                <td>{{skipped}}</td>
                <td>{{errors}}</td>
            </tr>
            {{/summary_table}}            
        </table>
    </div>
    </div>
    {{/summary}}
    <div class="row">
    {{#sections}}
    <ul class="collapsible">
        <li>
            <div class="collapsible-header">
                <i class="Medium material-icons">note</i><span>{{Section_title}}</span>
            </div>
            <div class="collapsible-body">
                <iframe src="{{html_path}}" style="width: 100%; height: 50vh;"></iframe>
            </div>
        </li>
    </ul>
    
    {{/sections}}
    </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('.collapsible');
            var instances = M.Collapsible.init(elems, {
                accordion: false,
                outDuration:600,
                inDuration: 600
            });
        });
    </script>
</body>
</html>